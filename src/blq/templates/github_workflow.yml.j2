name: blq checks

on:
  push:
    branches: [main, master]
  pull_request:
    branches: [main, master]

jobs:
{% for cmd in commands %}
  {{ cmd.name }}:
    name: {{ cmd.description or cmd.name }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Run {{ cmd.name }}
        run: .lq/hooks/{{ cmd.name }}.sh --via=standalone --metadata=footer

{% endfor %}
